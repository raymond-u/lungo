{% if config.modules.jupyterhub.enabled %}
location = /app/jupyterhub {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    if ($arg_iframe) {
        return 307 $scheme://$host/app/jupyterhub/?$args;
    }

    proxy_pass http://node;
}

location /app/jupyterhub/ {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    if ($arg_iframe) {
        return 480;
    }

    # Just pass them through because websocket requests have no referer header and cannot be reliably patched
    if ($http_upgrade = websocket) {
        return 480;
    }

    if ($http_referer ~* \?.*iframe=1.*$) {
        return 307 $scheme://$host$escaped_uri?iframe=1&$args;
    }

    error_page 480 = @jupyterhub;
    proxy_pass http://node;
}

location @jupyterhub {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    proxy_pass http://jupyterhub$escaped_uri?$filtered_args;
    proxy_redirect ~*^(?:https?://[^/]+)?/app/jupyterhub([^?]*)\??(.*)$ /app/jupyterhub$1?iframe=1&$2;
}
{% endif %}
