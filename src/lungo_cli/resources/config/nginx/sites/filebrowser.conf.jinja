{% if config.modules.filebrowser.enabled %}
location = /app/filebrowser {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    if ($arg_iframe) {
        return 307 $scheme://$host/app/filebrowser/?$args;
    }

    proxy_pass http://node;
}

location /app/filebrowser/ {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    if ($arg_iframe) {
        return 480;
    }

    if ($http_referer ~* \?.*iframe=1.*$) {
        return 307 $scheme://$host$escaped_uri?iframe=1&$args;
    }

    error_page 480 = @filebrowser;
    proxy_pass http://node;
}

location /app/filebrowser/api/public {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    if ($arg_iframe = "") {
        return 307 $scheme://$host$escaped_uri?iframe=1&$args;
    }

    proxy_pass http://filebrowser;
}

location @filebrowser {
    include snippets/proxy.conf;
    include snippets/auth.conf;

    proxy_pass http://filebrowser$escaped_uri?$filtered_args;
    proxy_redirect ~*^(?:https?://[^/]+)?/app/filebrowser([^?]*)\??(.*)$ /app/filebrowser$1?iframe=1&$2;
}
{% endif %}
