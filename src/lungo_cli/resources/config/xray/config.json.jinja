{
    "log": {
        "access": "/var/log/xray/access.log",
        "error": "/var/log/xray/error.log",
        "loglevel": "{{ 'debug' if dev else 'warning' }}",
        "dnsLog": false
    },
    "inbounds": [
        {
            "protocol": "vless",
            "listen": "0.0.0.0",
            "port": 80,
            "settings": {
                "clients": [
                    {% for account in xray_accounts %}
                    {
                        "email": "{{ account.email }}",
                        "id": "{{ account.id|string }}"
                    }
                    {{- '' if loop.last else ',' }}
                    {% endfor %}
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "ws",
                "security": "none",
                "tlsSettings": {
                    "alpn": [
                        "http/1.1"
                    ]
                },
                "wsSettings": {
                    "path": "/app/xray"
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom"
        }
    ]
}
